{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "spread": true
        }
    },
    "rules": {
        "no-var": "warn",
        "prefer-const": "warn",
        "no-mixed-spaces-and-tabs": "warn",
        "indent": ["warn", 2]
    }
}