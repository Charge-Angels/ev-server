version: 0.0
os: linux
files:
  - source: /
    destination: /opt/server
hooks:
  AfterInstall:
    - location src/aws/configure_server.sh
      timeout: 300
      runas root
  ApplicationStart:
    - location: src/aws/start_server.sh
      timeout: 300
      runas: root
  ApplicationStop:
    - location: src/aws/stop_server.sh
      timeout: 300
      runas: root
