{
    "title": "tenant creation",
    "description": "describes properties required to create a tenant",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "identifier of the tenant",
            "pattern": "^[0-9a-fA-F]{24}$"
        },
        "name": {
            "type": "string",
            "description": "name of the tenant",
            "minLength": 1,
            "maxLength": 100
        },
        "email": {
            "type": "string",
            "description": "email contact of the tenant",
            "format": "email"
        },
        "subdomain": {
            "type": "string",
            "description": "subdomain associated to the tenant",
            "pattern": "^[a-z0-9]*$",
            "minLength": 1,
            "maxLength": 20
        },
        "components": {
            "type": "object",
            "properties": {
                "ocpi": {
                    "type": "object",
                    "properties": {
                        "active": { "type": "boolean" }
                    }
                },
                "chargeathome": {
                    "type": "object",
                    "properties": {
                        "active": { "type": "boolean" }
                    }
                },
                "pricing": {
                    "type": "object",
                    "properties": {
                        "active": { "type": "boolean" }
                    }
                },
                "organization": {
                    "type": "object",
                    "properties": {
                        "active": { "type": "boolean" }
                    }
                }
            }
        }
    },
    "required": ["id", "name", "email", "subdomain"]
}
